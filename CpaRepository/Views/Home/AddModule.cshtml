@model CpaRepository.Models.AddedModule

@{
    ViewData["Title"] = "View";
}

<h1>Добавить модуль</h1>

<h4>AddedModule</h4>
<hr />
<h3>Выберите вендора</h3>
@Html.DropDownList("State", ViewBag.States as SelectList, new { id = "state" })
<h3>Выберите модуль</h3>
@Html.DropDownList("City", ViewBag.Cities as SelectList, new { id = "city" })

<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CRC" class="control-label"></label>
                <input asp-for="CRC" class="form-control" />
                <span asp-validation-for="CRC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label"></label>
                <input asp-for="Version" class="form-control" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfAgreement" class="control-label"></label>
                <input asp-for="DateOfAgreement" class="form-control" />
                <span asp-validation-for="DateOfAgreement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PatchVendorModule" class="control-label"></label>
                <input asp-for="PatchVendorModule" class="form-control" />
                <span asp-validation-for="PatchVendorModule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{
    <script type="text/javascript">
    $(function () {

        $('#state').change(function()
        {
            // получаем выбранный id
            var id = $(this).val();
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetItems")/' + id,
                success: function (data) {

                    // заменяем содержимое присланным частичным представлением
                    $('#city').replaceWith(data);
                }
            });
        });
    })
    </script>
}
