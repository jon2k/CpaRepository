@model CpaRepository.ViewModel.VendorModule.VendorModuleViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить модуль @ViewBag.Vendor</h1>

<h4>VendorModule</h4>
<hr />
<select asp-for="CpaModuleId" asp-items="@Model.CpaModules">
    <option>Please select</option>
    </select>
<select multiple asp-for="CpaModulesId" asp-items="@Model.CpaModules" class="custom-select"></select>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" type="hidden">
                <label asp-for="VendorId" type="hidden" class="control-label"></label>
                <input asp-for="VendorId" type="hidden" class="form-control" value="@ViewBag.VendorId" />
            </div>
            <div class="form-group">
                <label asp-for="NameModule" class="control-label"></label>
                <input asp-for="NameModule" class="form-control" />
                <span asp-validation-for="NameModule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CpaModulesId" class="control-label"></label>
                <select multiple asp-for="CpaModulesId" asp-items="@Model.CpaModules" class="custom-select"></select>
                <span asp-validation-for="CpaModulesId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
