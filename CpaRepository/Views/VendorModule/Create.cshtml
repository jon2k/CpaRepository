<h1>Добавить модуль @Model.VendorName</h1>

<h4>Добавить модуль</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="VendorId" type="hidden" class="form-control" value="@Model.VendorId" />
            </div>
            <div class="form-group">
                <label asp-for="NameModule" class="control-label"></label>
                <input asp-for="NameModule" class="form-control" />
                <span asp-validation-for="NameModule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CpaModulesId" class="control-label"></label>
                <select class="form-control" multiple data-live-search="true" asp-for="CpaModulesId" asp-items="@Model.CpaModulesSelectListItem"></select>
                <span asp-validation-for="CpaModulesId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

<script type="text/javascript">
    $('select').selectpicker('deselectAll');
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
